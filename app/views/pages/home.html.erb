<section class="mp-cards">
  <h2>Sondages en cours</h2>
  <%= content_tag :ul do %>
    <% @polls.each do |poll| %>
      <li><%= render "polls/preview", poll: poll %></li>
    <% end %>
  <% end unless @polls.empty? %>
</section>

