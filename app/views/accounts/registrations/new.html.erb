<section class="mp-account-session-form">
  <h2>Inscription</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "accounts/shared/error_messages", resource: resource %>

    <div class="field">
      <span class="field-prepend"><i class="fas fa-at"></i></span>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field">
      <span class="field-prepend"><i class="fas fa-key"></i></span>
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "Mot de passe" %>
    </div>

    <div class="field">
      <span class="field-prepend"><i class="fas fa-key"></i></span>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Répétez mot de passe" %>
    </div>

    <div class="actions">
      <%= f.submit "S'inscrire" %>
    </div>
  <% end %>

  <%= render "accounts/shared/links" %>
</section>