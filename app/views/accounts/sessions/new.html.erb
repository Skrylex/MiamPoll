<section class="mp-account-session-form">
  <h2>Authentification</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <div class="mp-flex mp-flex-direction-row">
        <div class="field-prepend"><i class="fas fa-at"></i></div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
      </div>
    </div>

    <div class="field">
      <div class="mp-flex mp-flex-direction-row">
        <div class="field-prepend"><i class="fas fa-key"></i></div>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Mot de passe", class: "form-control" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Connexion", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "accounts/shared/links" %>
</section>